{% extends 'base.html.twig' %}

{% block title %}{{produit.name}}{% endblock %}

{% block content%}
    <br/>
    <div class="row">
        <div class="col-md-5">
            <img  src="/uploads/{{ produit.illustration }}" alt="{{ produit.name }}" class="img-fluid">
        </div>
            <div class="col-md-7 my-auto">
                <h3>{{produit.name}}</h3>
                <p >{{produit.subtitle}}</p>
                <span class="produit-page-price">{{ (produit.price*10) }}TND</span>
                <hr>
                <p>{{produit.description}}</p>
                <a href="{{ path('add_to_cart',{'id' :produit.id}) }}" class="btn btn-primary">Ajouter au panier</a>
            </div>
    </div>
<hr>
    <h3>Nos meilleures produits </h3>
    <div class="row">
        {% for product in products%}
            <div class="col-md-3">
                {% include 'product/single_product.html.twig' %}
            </div>
        {% endfor %}
    </div>


{% endblock %}
