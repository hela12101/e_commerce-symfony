{% extends 'base.html.twig' %}

{% block title %}Mon compte!{% endblock %}

{% block content %}
    <br/>
   
   <span style="float&#58;left">  <h1> Mon compte</h1></span> </br>
   <span style="float&#58;right"> 
    {% if is_granted('ROLE_ADMIN') %}
     
   <p><a class="btn btn-outline-success btn-rounded waves-effect" href="/admin" role="button">Accéder au backoffice</a></p>
             <style>  .btn-outline-success {
                       margin-left:20%;
                    }
                    
                    </style>   
    
    {% endif %}</span>
    </br> </br>


    <h4> Bienvenue {{ app.user.firstname }} dans votre compte.<h4>
     
   
    <br/>
   
    <div class="row">
     <div class="col-md-4">
       <div class="account-item text-center">
        <img src="{{asset('assets/img/password.png')}}" alt="pwd "></br>
         <a href="{{ path('account_password') }}"> Modifier mon mot de passe</a>
       </div>
     </div>
       
     <div class="col-md-4">
       <div class="account-item text-center">
        <img src="{{asset('assets/img/navigation.png')}}" alt="navigation "></br>
         <a href="{{ path('account_address') }}">Gérer mes adresses  </a>
       </div>
     </div>
      
     <div class="col-md-4">
       <div class="account-item text-center">
        <img src="{{asset('assets/img/cargo.png')}}" alt="cargo"></br>
         <a href="{{ path('account_order') }}">Mes commandes </a>
       </div>
     </div>
      <style>
      .account-item{
    background-color:#dfe4ea;
    padding: 70px ;
    
}

.account-item a{
    text-transform:uppercase ;
    font-size: 13px;
    color:black;
    font-weight: bold;
}

.account-item a:hover{
    color:#3c6382;
   text-decoration: none;
}
      </style>
    </div>
    <hr>

{% endblock %}
